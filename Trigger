IF OBJECT_ID('proc_ThemNguoiDung','P') IS NOT NULL DROP PROCEDURE proc_ThemNguoiDung;
IF OBJECT_ID('proc_ThemMonHocMoi','P') IS NOT NULL DROP PROCEDURE proc_ThemMonHocMoi;
IF OBJECT_ID('proc_ThemLopHoc','P') IS NOT NULL DROP PROCEDURE proc_ThemLopHoc;
GO

-- Procedure thêm người dùng mới với mã số tự động
CREATE OR ALTER PROCEDURE proc_ThemNguoiDung
    @HoTen NVARCHAR(100),
    @MatKhau VARCHAR(100),
    @SDT VARCHAR(15) = NULL,
    @DiaChi NVARCHAR(200) = NULL,
    @VaiTro NVARCHAR(20), -- 'Sinh viên' hoặc 'Giảng viên'
    @Khoa NVARCHAR(100)
AS
BEGIN
    SET NOCOUNT ON;
    
    BEGIN TRY
        BEGIN TRANSACTION;
        
        -- 1. Xác định tiền tố và tìm mã số lớn nhất (Logic giữ nguyên)
        DECLARE @Prefix VARCHAR(10);
        DECLARE @LastID VARCHAR(20);
        DECLARE @NewID VARCHAR(20);
        
        IF @VaiTro = N'Giảng viên'
        BEGIN
            SET @Prefix = 'GV';
            SELECT TOP 1 @LastID = MSCB FROM GiangVien 
            WHERE MSCB LIKE @Prefix + '%' AND ISNUMERIC(SUBSTRING(MSCB, LEN(@Prefix) + 1, LEN(MSCB))) = 1
            ORDER BY CAST(SUBSTRING(MSCB, LEN(@Prefix) + 1, LEN(MSCB)) AS INT) DESC;
        END
        ELSE
        BEGIN
            SET @Prefix = 'SV';
            SELECT TOP 1 @LastID = MSSV FROM SinhVien 
            WHERE MSSV LIKE @Prefix + '%' AND ISNUMERIC(SUBSTRING(MSSV, LEN(@Prefix) + 1, LEN(MSSV))) = 1
            ORDER BY CAST(SUBSTRING(MSSV, LEN(@Prefix) + 1, LEN(MSSV)) AS INT) DESC;
        END

        -- 2. Tính toán mã mới (Logic giữ nguyên)
        DECLARE @NumberPart INT;
        IF @LastID IS NULL SET @NumberPart = 1;
        ELSE SET @NumberPart = CAST(SUBSTRING(@LastID, LEN(@Prefix) + 1, LEN(@LastID)) AS INT) + 1;
        
        DECLARE @NumberLength INT = CASE WHEN @NumberPart >= 10000 THEN LEN(CAST(@NumberPart AS VARCHAR(10))) ELSE 4 END;
        SET @NewID = @Prefix + RIGHT(REPLICATE('0', @NumberLength) + CAST(@NumberPart AS VARCHAR(10)), @NumberLength);

        -- 3. TỰ ĐỘNG SINH EMAIL
        DECLARE @GeneratedEmail VARCHAR(100);
        SET @GeneratedEmail = @NewID + '@uis.edu.vn';

        -- Kiểm tra an toàn: Nếu email này vô tình đã tồn tại (dù mã số mới)
        IF EXISTS (SELECT 1 FROM TaiKhoan WHERE Email = @GeneratedEmail)
        BEGIN
            SELECT 0 AS Success, N'Lỗi hệ thống: Email tự sinh đã tồn tại!' AS Message, NULL AS NewCode, NULL AS NewEmail;
            ROLLBACK TRANSACTION;
            RETURN;
        END

        -- 4. Thêm vào bảng TaiKhoan
        INSERT INTO TaiKhoan (Email, MatKhau, VaiTro)
        VALUES (@GeneratedEmail, @MatKhau, @VaiTro); -- Dùng @GeneratedEmail

        -- 5. Thêm vào bảng SinhVien hoặc GiangVien
        IF @VaiTro = N'Giảng viên'
        BEGIN
            INSERT INTO GiangVien (MSCB, Email, HoTen, Khoa, DiaChi, SDT)
            VALUES (@NewID, @GeneratedEmail, @HoTen, @Khoa, @DiaChi, @SDT);
        END
        ELSE
        BEGIN
            INSERT INTO SinhVien (MSSV, Email, HoTen, Khoa, DiaChi, SDT, GPA)
            VALUES (@NewID, @GeneratedEmail, @HoTen, @Khoa, @DiaChi, @SDT, 0);
        END

        COMMIT TRANSACTION;

        -- 6. Trả về kết quả kèm Email
        SELECT 
            1 AS Success, 
            N'Thêm người dùng thành công!' AS Message, 
            @NewID AS NewCode,
            @GeneratedEmail AS NewEmail; -- Trả về email để hiển thị
        
    END TRY
    BEGIN CATCH
        IF @@TRANCOUNT > 0 ROLLBACK TRANSACTION;  
        SELECT 0 AS Success, ERROR_MESSAGE() AS Message, NULL AS NewCode, NULL AS NewEmail;
    END CATCH
END;
GO

-- Procedure xử lý insert môn học kèm môn tiên quyết và cấu trúc điểm
CREATE OR ALTER PROCEDURE proc_ThemMonHocMoi
    -- Thông tin môn học
    @MaMon VARCHAR(10),
    @TenMon NVARCHAR(150),
    @SoTinChi INT,
    @KhoaPhuTrach NVARCHAR(100),
    @MaMonSongHanh VARCHAR(10) = NULL,
    
    -- Thay đổi 1: Nhận vào chuỗi danh sách các mã môn (VD: 'CO1005,CO1007')
    @ListMaMonTienQuyet VARCHAR(MAX) = NULL, 
    
    -- Cấu trúc điểm
    @Quiz INT = 0,
    @ThiNghiem INT = 0,
    @BTL INT = 0,
    @GiuaKy INT = 0,
    @CuoiKy INT = 0
AS
BEGIN
    SET NOCOUNT ON;
    
    -- 1. KIỂM TRA TỔNG TỶ TRỌNG
    DECLARE @TongTyTrong INT;
    SET @TongTyTrong = @Quiz + @ThiNghiem + @BTL + @GiuaKy + @CuoiKy;

    IF @TongTyTrong <> 100
    BEGIN
        THROW 50001, N'Lỗi: Tổng tỷ trọng các thành phần điểm phải bằng 100%.', 1;
        RETURN;
    END

    BEGIN TRANSACTION;
    BEGIN TRY
        -- 2. INSERT BẢNG MONHOC
        INSERT INTO MonHoc (MaMon, TenMon, SoTinChi, MaMonSongHanh, KhoaPhuTrach)
        VALUES (@MaMon, @TenMon, @SoTinChi, @MaMonSongHanh, @KhoaPhuTrach);

        -- 3. XỬ LÝ MÔN TIÊN QUYẾT
        IF @ListMaMonTienQuyet IS NOT NULL AND LTRIM(RTRIM(@ListMaMonTienQuyet)) <> ''
        BEGIN
            INSERT INTO MonTienQuyet (MaMon, MaMonTienQuyet)
            SELECT DISTINCT
                @MaMon, 
                LTRIM(RTRIM(value))
            FROM STRING_SPLIT(@ListMaMonTienQuyet, ',')
            WHERE LTRIM(RTRIM(value)) <> '';
        END

        -- 4. INSERT BẢNG CAUTRUCDIEM (Thêm dấu '_')
        
        -- > Quiz (Mã: MaMon_Q)
        IF @Quiz > 0
        BEGIN
            INSERT INTO CauTrucDiem (MaThanhPhan, ThanhPhanDiem, TyTrong, MaMon)
            VALUES (@MaMon + '_Q', N'Quiz', @Quiz, @MaMon);
        END

        -- > Thí nghiệm (Mã: MaMon_TN)
        IF @ThiNghiem > 0
        BEGIN
            INSERT INTO CauTrucDiem (MaThanhPhan, ThanhPhanDiem, TyTrong, MaMon)
            VALUES (@MaMon + '_TN', N'Thí nghiệm', @ThiNghiem, @MaMon);
        END

        -- > BTL (Mã: MaMon_BTL)
        IF @BTL > 0
        BEGIN
            INSERT INTO CauTrucDiem (MaThanhPhan, ThanhPhanDiem, TyTrong, MaMon)
            VALUES (@MaMon + '_BTL', N'BTL', @BTL, @MaMon);
        END

        -- > Giữa kỳ (Mã: MaMon_GK)
        IF @GiuaKy > 0
        BEGIN
            INSERT INTO CauTrucDiem (MaThanhPhan, ThanhPhanDiem, TyTrong, MaMon)
            VALUES (@MaMon + '_GK', N'Giữa kì', @GiuaKy, @MaMon);
        END

        -- > Cuối kỳ (Mã: MaMon_CK)
        IF @CuoiKy > 0
        BEGIN
            INSERT INTO CauTrucDiem (MaThanhPhan, ThanhPhanDiem, TyTrong, MaMon)
            VALUES (@MaMon + '_CK', N'Cuối kì', @CuoiKy, @MaMon);
        END

        COMMIT TRANSACTION;
    END TRY
    BEGIN CATCH
        ROLLBACK TRANSACTION;
        THROW;
    END CATCH
END;
GO

-- Procedure thêm lớp học mới với mã số lớp tự động
CREATE PROCEDURE proc_ThemLopHoc
    @MaHK VARCHAR(10),
    @MaMon VARCHAR(10),
    @SiSoMax INT,
    @MSCB VARCHAR(10) = NULL -- Có thể để trống nếu chưa xếp giảng viên
AS
BEGIN
    SET NOCOUNT ON;
    
    -- Sử dụng Transaction để đảm bảo an toàn dữ liệu khi nhiều người thêm cùng lúc
    BEGIN TRANSACTION;

    BEGIN TRY
        -- 1. Validate dữ liệu đầu vào (Kiểm tra ràng buộc CHECK thủ công để báo lỗi rõ hơn)
        IF @SiSoMax < 40 OR @SiSoMax > 80
        BEGIN
            ROLLBACK TRANSACTION;
            SELECT 0 AS Success, N'Sĩ số tối đa phải từ 40 đến 80' AS Message;
            RETURN;
        END

        -- 2. Tính toán Mã Lớp mới (Logic tự tăng theo nhóm)
        DECLARE @MaxID INT;
        DECLARE @NewMaLop VARCHAR(10);

        -- Lấy phần số lớn nhất hiện tại của lớp thuộc ĐÚNG Học kỳ và Môn học đó
        -- Sử dụng khóa (UPDLOCK) để chặn người khác chèn cùng lúc
        SELECT @MaxID = MAX(CAST(SUBSTRING(MaLopHoc, 2, LEN(MaLopHoc)) AS INT))
        FROM LopHoc WITH (UPDLOCK, HOLDLOCK)
        WHERE MaHocKy = @MaHK AND MaMonHoc = @MaMon;

        -- Nếu chưa có lớp nào thì bắt đầu là 0
        IF @MaxID IS NULL SET @MaxID = 0;

        -- Tăng lên 1
        SET @MaxID = @MaxID + 1;

        -- Format thành L01, L02... L09, L10, L100 (Tự động thêm số 0 nếu < 10)
        IF @MaxID < 10
            SET @NewMaLop = 'L0' + CAST(@MaxID AS VARCHAR(5));
        ELSE
            SET @NewMaLop = 'L' + CAST(@MaxID AS VARCHAR(5));

        -- 3. Thực hiện Insert
        INSERT INTO LopHoc (
            MaLopHoc, 
            MaHocKy, 
            MaMonHoc, 
            SiSoToiDa, 
            SiSoHienTai, 
            MSCB, 
            DaHuy
        )
        VALUES (
            @NewMaLop, 
            @MaHK, 
            @MaMon, 
            @SiSoMax, 
            0, -- Mặc định sĩ số hiện tại là 0
            @MSCB, 
            0  -- Mặc định chưa hủy
        );

        -- 4. Commit và trả về kết quả
        COMMIT TRANSACTION;
        
        SELECT 
            1 AS Success, 
            N'Thêm lớp học thành công' AS Message, 
            @NewMaLop AS MaLopMoi;

    END TRY
    BEGIN CATCH
        -- Nếu có lỗi thì rollback
        ROLLBACK TRANSACTION;
        
        -- Trả về thông báo lỗi
        SELECT 
            0 AS Success, 
            ERROR_MESSAGE() AS Message, 
            NULL AS MaLopMoi;
    END CATCH
END;
GO